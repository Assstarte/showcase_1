<div class="container mb-5">
    <h3>Категория #{{category.id}} - {{category.name}}</h3>
    <form action="" class="form" method="POST">
        <div class="form-group">
            <label for="name">Name</label>
            <input value="{{category.name}}" type="text" class="form-control" name="name" id="name" disabled="true">
        </div>
        <div class="form-group">
            <label for="title">Title</label>
            <input value="{{category.title}}" type="text" class="form-control" name="title" id="title" disabled="true">
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            <textarea name="description" class="form-control" id="description"
                disabled="true">{{category.description}}</textarea>
        </div>
        <div class="form-group">
            <label for="h1">H1</label>
            <input value="{{category.h1}}" type="text" class="form-control" name="h1" id="h1" disabled="true">
        </div>
        <div class="form-group">
            <label for="slug">Slug</label>
            <input value="{{category.slug}}" type="text" class="form-control" name="slug" id="slug" disabled="true">
        </div>

        <a href="{{adminItemUrl 'categories'category.id}}/edit">
            <button type="button" class="btn btn-default btn-warning">Редактировать</button>
        </a>


    </form>

    <form class="d-inline" action="{{adminItemUrl 'categories' category.id}}/?_method=DELETE" method="POST">
        <button class="btn btn-md btn-danger mt-2" type="submit">
            Удалить
        </button>
    </form>
</div>