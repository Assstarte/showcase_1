<div class="container mb-5">
    {{#if error}}
    <div class="row">
        <div class="col d-flex justify-content-center">
            <div class="rounded w-50 p-4 bg-warning text-white">
                {{error.message}}
            </div>
        </div>
    </div>
    {{/if}}
    <div class="row mb-2">
        <div class="col d-flex justify-content-between">
            <h3 class="m-0">Категории</h3>
            <a href="{{adminUrl 'categories/create'}}">
                <button type="button" class="btn btn-success">
                    Добавить категорию
                </button>
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Название</th>
                        <th scope="col">Slug</th>
                        <th scope="col" class="text-center">Редактирование</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each categories}}
                    <tr>
                        <th scope="row">
                            {{id}}
                        </th>
                        <td>
                            <a href="{{adminItemUrl 'categories' id}}">{{name}}</a>
                        </td>
                        <td>
                            {{slug}}
                        </td>
                        <td class="text-center">
                            <a href="{{adminItemUrl 'categories' id}}/edit">
                                <button class="btn btn-sm btn-primary">
                                    Редактирование
                                </button>
                            </a>
                            <form class="d-inline" action="{{adminItemUrl 'categories' id}}/?_method=DELETE"
                                method="POST">
                                <button class="btn btn-sm btn-danger" type="submit">
                                    Удалить
                                </button>
                            </form>
                        </td>
                    </tr>

                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>


    <div class="row">
        <div class="col">
            {{>pagination}}
        </div>
    </div>
</div>
</div>